<div class="row">
  <div class ="col-md-6">
    <div class="form-group">
      <label for "animal_name">Name</label>
      <input id="animal_name" class="form-control" name="animal[name]" type="text" value="<%= @animal.name %>">
    </div>
    <div class="form-group">
      <label for "animal_age">Age</label>
      <input id="animal_age" class="form-control" name="animal[age]" type="text" value="<%= @animal.age %>">
    </div>
    <div class="form-group">
      <label for "animal_species">Species</label>
      <input id="animal_species" class="form-control" name="animal[species]" type="text" value="<%= @animal.species %>">
    </div>
  </div>
  <div class='col-md-1'>
  </div>
  <div class = 'col-md-5'>
    <label>Traits</label>
    <% @traits.each do |trait| %>
      <div class="checkbox">
        <label for "trait_id">
          <input id="trait_id" name="traits[]" type="checkbox" value="<%= trait.id %>"><%= trait.name.capitalize %>
        </label>
      </div>
    <%end%>
  </div>
</div>


